<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.farmfarm.UsersVO">
	
	<select id="loginUser" resultType="UsersVO">
		select * from users where user_email=#{user_email} and user_pw=#{user_pw};
	</select>
	
	<insert id="userInsert" parameterType="UsersVO">
		INSERT INTO users(user_email, user_pw, user_name)
		VALUES(#{user_email},#{user_pw},#{user_name})
		
	</insert>
	
	<select id="getAllUsers" resultType="UsersVO">
		select * from users
	</select>
	
	<select id="pointCheck" parameterType="hashMap" resultType="int">
		select count(*) 
		from users
		where user_serial_num = #{user_serial_num}
		and user_point >= #{user_point}
	</select>
	
</mapper>
